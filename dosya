}
void arama()
{
     
     int sayac;
     char aranan[30];
     FILE *dosya;
     printf("Aranacak Kaydin Adi? :"); 
     scanf("%s",&aranan);
     dosya=fopen("rehber.txt","r");     
     while(!feof(dosya))
     {
      if(aranan==kayit.ad)
      {
      sayac++;
      }
      else
      {
      }
     }
     if(sayac>0)
     {
      printf("\n\t%s \t%lld \t%lld",kayit.ad,kayit.soyad,kayit.numara);
     }
     
     
     
     fclose(dosya);
}
